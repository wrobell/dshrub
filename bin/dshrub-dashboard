"""
Start dashboard on HTTP server and read data from Redis channel.
"""

import argparse
import logging

parser = argparse.ArgumentParser()
parser.add_argument(
    '-v', '--verbose', action='store_true', dest='verbose', default=False,
        help='explain what is being done'
)
parser.add_argument('dashboard', help='dashboard directory')
parser.add_argument('channel', help='redis channel to read data from')
parser.add_argument(
    'sensors', nargs='+', help='list of sensors for which data is expected'
)
args = parser.parse_args()

if args.verbose:
    logging.basicConfig(level=logging.DEBUG)
else:
    logging.basicConfig(level=logging.WARN)


import asyncio
import json
from collections import deque

import aioredis
import tornado.web
import tawf

logger = logging.getLogger(__name__)

app = tawf.Application([
    (r'/(.*)', tornado.web.StaticFileHandler, {'path': args.dashboard}),
])

config = {
    'refresh': 1,
    'data': args.sensors,
}

last_data = {s: deque([], 3600 * 4) for s in args.sensors}

@app.route('/data', tawf.Method.OPTIONS, mimetype='application/json')
def conf():
    return config

@app.route('/data/{sensor}', mimetype='application/json')
def data(sensor):
    return list(last_data[sensor])

@app.sse('/data')
def data(callback):
    client = yield from aioredis.create_redis(('localhost', 6379))
    channel, = yield from client.subscribe(args.channel)

    if __debug__:
        logger.debug('connected to redis server')

    while True:
        data = yield from channel.get()
        callback(data.decode())


@asyncio.coroutine
def data_keeper(last_data):
    client = yield from aioredis.create_redis(('localhost', 6379))
    channel, = yield from client.subscribe(args.channel)

    if __debug__:
        logger.debug('connected to redis server')

    while True:
        data = yield from channel.get()
        item = json.loads(data.decode())
        last_data[item['name']].append(item)


app.listen(8090, address='0.0.0.0')
loop = asyncio.get_event_loop()
loop.run_until_complete(data_keeper(last_data))

# vim: sw=4:et:ai
